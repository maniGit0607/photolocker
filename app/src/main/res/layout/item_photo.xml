<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/background_color"
            android:contentDescription="@string/photos" />

        <!-- Selection Overlay (for multi-select mode) -->
        <View
            android:id="@+id/selectionOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/selection_overlay"
            android:visibility="gone" />

        <!-- Selection Check -->
        <ImageView
            android:id="@+id/ivSelection"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:layout_gravity="top|end"
            android:src="@drawable/selection_indicator"
            android:visibility="gone"
            android:contentDescription="Selected" />

    </FrameLayout>

</androidx.cardview.widget.CardView>